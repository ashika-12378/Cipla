  width: 50px;
  margin: 0 10px;
  padding: 5px;
  border: none;
  text-align:center;
}

.cquantity__input:focus {
  outline: none;
}

.cquantity__button{
  color:#454545;
}

.cquantity__button svg {
 width:16px;
}

