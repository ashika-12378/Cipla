{%- capture socials -%}
instagram,
facebook,
twitter,
pinterest,
snapchat,
tiktok,
tumblr,
linkedin,
youtube,
vimeo
{%- endcapture -%}
{%- assign socials = socials | strip_newlines | split: ',' -%}

{%- capture socials_html -%}
  {%- for social in socials -%}
    {%- assign social_link = 'social_media_' | append: social | append: '_url' -%}
    {%- assign social_text = 'general.social.links.' | append: social -%}

    {%- if settings[social_link] != blank -%}
      <li>
        <a href="{{- settings[social_link] -}}" class="focus-inset" target="_blank">
          {%- case social -%}
            {%- when 'facebook' -%}
              {%- render 'icon-facebook' -%}
            {%- when 'twitter' -%}
              {%- render 'icon-twitter' -%}
            {%- when 'pinterest' -%}
              {%- render 'icon-pinterest' -%}
            {%- when 'instagram' -%}
              {%- render 'icon-instagram' -%}
            {%- when 'snapchat' -%}
              {%- render 'icon-snapchat' -%}
            {%- when 'tiktok' -%}
              {%- render 'icon-tiktok' -%}
            {%- when 'tumblr' -%}
              {%- render 'icon-tumblr' -%}
            {%- when 'linkedin' -%}
              {%- render 'icon-linkedin' -%}
            {%- when 'youtube' -%}
              {%- render 'icon-youtube' -%}
            {%- when 'vimeo' -%}
              {%- render 'icon-vimeo' -%}
          {%- endcase -%}

          <span class="visually-hidden">
            {{- social_text | t -}}
          </span>
        </a>
      </li>
    {%- endif -%}
  {%- endfor -%}
{%- endcapture -%}

{%- if socials_html -%}
  <ul class="list-unstyled list-socials {{ class }}" role="list">
    {{- socials_html -}}
  </ul>
{%- endif -%}
